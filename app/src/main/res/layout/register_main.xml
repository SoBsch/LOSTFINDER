<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    tools:background="@color/login_background"
    tools:layout_height="261dp">


    <ImageView
        android:id="@+id/register_main_message1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/register_main_message2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/basic"
        android:letterSpacing="-0.03"
        android:text="@string/register_main_tv2"
        android:textColor="#cc000000"
        android:textSize="13.5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_main_message1" />

    <!--사람이미지-->
    <ImageView
        android:id="@+id/register_main_person"
        android:layout_width="74.3dp"
        android:layout_height="74.3dp"
        android:layout_marginTop="25dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_main_message2"
        tools:src="@drawable/user_icon" />

    <TextView
        android:id="@+id/register_main_submit"
        android:layout_width="210.3dp"
        android:layout_height="34.7dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/login_round"
        android:fontFamily="@font/basic"
        android:gravity="center"
        android:text="@string/register_main_submit"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_main_person" />

    <TextView
        android:id="@+id/register_main_serviceintro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/basic"
        android:gravity="center_horizontal"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="8.5sp"
        android:text="@string/register_main_service_intro"
        android:textColor="@color/black"
        android:textSize="10.3sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/register_main_sericecenter"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_main_submit" />

    <TextView
        android:id="@+id/register_main_sericecenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/basic"
        android:gravity="center_horizontal"
        android:letterSpacing="-0.03"
        android:text="@string/register_main_service_center"
        android:textColor="@color/black"
        android:textSize="10.3sp"
        app:layout_constraintBottom_toBottomOf="@id/register_main_serviceintro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/register_main_serviceintro"
        app:layout_constraintTop_toTopOf="@id/register_main_serviceintro" />


</android.support.constraint.ConstraintLayout>