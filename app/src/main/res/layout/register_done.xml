<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    tools:background="@color/login_background">


    <ImageView
        android:id="@+id/register_done_message1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/complete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/register_done_message2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/basic"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="5sp"
        android:text="@string/register_main_tv2"
        android:textColor="#cc000000"
        android:textSize="13.5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_done_message1" />

    <!--사람이미지-->
    <TextView
        android:id="@+id/register_done_finish_message"
        android:layout_width="0dp"
        android:layout_height="156dp"
        android:layout_marginTop="19.3dp"
        android:background="@color/login_background"
        android:fontFamily="@font/basic"
        android:gravity="center"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="4.8sp"
        android:text="@string/register_done_content"
        android:textColor="@color/black"
        android:textSize="15.2sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_done_message2" />

    <TextView
        android:id="@+id/register_done_submit"
        android:layout_width="210.3dp"
        android:layout_height="34.7dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/login_round"
        android:fontFamily="@font/basic"
        android:gravity="center"
        android:text="로그인하기"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_done_finish_message" />


</android.support.constraint.ConstraintLayout>